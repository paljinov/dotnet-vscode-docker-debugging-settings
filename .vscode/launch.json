{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Docker .NET Core Launch",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "debug",
            "cwd": "/app",
            "program": "/app/bin/Debug/net5.0/Example.dll",
            "console": "internalConsole",
            "pipeTransport": {
                "pipeProgram": "docker",
                "pipeArgs": [
                    "exec",
                    "-i",
                    "dotnet-vscode-docker-debugging-settings"
                ],
                "pipeCwd": "${workspaceFolder}",
                "debuggerPath": "/vsdbg/vsdbg",
                "quoteArgs": false
            },
            "sourceFileMap": {
                "/app": "${workspaceFolder}"
            },
            "justMyCode": false,
            "requireExactSource": false,
            "logging": {
                "moduleLoad": false
            }
        },
        {
            "name": "Docker .NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processName": "/app/bin/Debug/net5.0/Example",
            "pipeTransport": {
                "pipeProgram": "docker",
                "pipeArgs": [
                    "exec",
                    "-i",
                    "dotnet-vscode-docker-debugging-settings"
                ],
                "pipeCwd": "${workspaceFolder}",
                "debuggerPath": "/vsdbg/vsdbg",
                "quoteArgs": false
            },
            "sourceFileMap": {
                "/app": "${workspaceFolder}"
            },
            "justMyCode": false,
            "requireExactSource": false,
            "logging": {
                "moduleLoad": false
            }
        },
        {
            "name": ".NET Core Launch",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/Debug/net5.0/Example.dll",
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "justMyCode": false,
            "requireExactSource": false,
            "logging": {
                "moduleLoad": false
            }
        }
    ]
}
